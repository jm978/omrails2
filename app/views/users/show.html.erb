<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-block">
          <h4 class="card-title"><%= @user.username%></h4>
          <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
          <% if user_signed_in? %>
            <p class="card-text"><%= link_to current_user.username, user_path(current_user.username)%></p>
            <% if current_user.following?(@user) %>
              <p class="card-text"><%=link_to "Unfollow", unfollow_user_path(@user.username), method: :delete %>
            <% else %>
              <p class="card-text"><%=link_to "Follow", follow_user_path(@user.username), method: :post %>
            <% end %>
          <% end %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card">
        <div class="card-block">
            <% @posts.each do |post| %>
            <h4 class="card-title"><%= link_to post.user.username, user_path(post.user.username) %></h4>
            <p class="card-text"><%= post.content %></p>
            <% if post.user == current_user %>
              <%= link_to 'Edit', edit_post_path(post) %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
