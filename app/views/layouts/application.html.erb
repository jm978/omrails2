<!DOCTYPE html>
<html>
  <head>
    <title>The Bathroom Wall</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    

  </head>

  <body>

    <!-- Navigation Bar -->
    <center><nav class="navbar fixed-bottom navbar-dark bg-faded navbar-toggler">
      <div class="container">
        <!-- Icons -->
        <div class="icons-nav">
          
          <%= link_to posts_path do %>
            <%= image_tag "button_home.png" %>
          <% end %>
        
          <%= link_to new_post_path do %>
            <%= image_tag "button_post.png" %>
          <% end %>
          
          <%= link_to feed_path do %>
            <%= image_tag "button_feed.png" %>
          <% end %>
        
          <p class="card-text"><%= link_to current_user.username, user_path(current_user.username)%></p></center>
          
        </div>
        
    </div>
</nav>

    <!-- Flash Messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
      
        <hr>
        <center>
        
        </center>
      </div>
    </footer>
  </body>
</html>
