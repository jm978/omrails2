<!DOCTYPE html>
<html>
  <head>
    <title>The Bathroom Wall</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width">
    

  </head>

  <body>

    <!-- Navigation Bar -->
    <center><nav class="navbar fixed-bottom navbar-dark bg-faded navbar-toggler">
      <div class="container">
        <!-- Icons -->
        <div class="icons-nav">
          <%= link_to(image_tag("button_home.png"), posts_path) %>
          <%= link_to(image_tag("button_post.png"), new_post_path) %>
          <%= link_to(image_tag("button_feed.png"), feed_path) %>

          <% if user_signed_in? %>
            <%= link_to user_path(current_user.username) do %>
            <%= image_tag ("button_me.png") %>
            
            <%= link_to(image_tag("button_sign_in"), signin_path)%>
          <% end %>
          <% end %>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
      
        <hr>
        <center>
        
        </center>
      </div>
    </footer>
  </body>
</html>
