<!DOCTYPE html>
<html>
  <head>
    <title>The Bathroom Wall</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    

  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-inverse navbar-toggleable-sm bg-inverse">
      <div class="container">
        <p class="nav-logo-writing">The Bathroom Wall</p>
        <ul class="nav navbar-nav">
            <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Contact", contact_path, class: "nav-link" %></li>
          </ul>
        <ul class="nav navbar-nav"
        <!-- Login Buttons -->
        <% if user_signed_in? %>
          <li class="nav-item pull-md-right"><%= link_to "Log out", signout_path, method: :delete, class: "btn btn-info btn-sm" %></li>  
        <% else %>
          <li class="nav-item pull-md-right"><%= link_to "Sign in", signin_path, class: "nav-link" %></li> 
          <li class="nav-item pull-md-right"><%= link_to "Sign up", signup_path, class: "btn btn-primary"%></li>
        <% end %>
      </ul>
    </div>
</nav>

    <!-- Flash Messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>

    <!-- Page Content -->
    <%= yield %>
    
    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
      
        <hr>
        <center>
        <%= octicon "alert", :height => 32,  :class => "right left", :"aria-label" => "hi" %>
          <p>Â© 2016 One Month</p>
        </center>
      </div>
    </footer>

  </body>
</html>
