<div class="container">
      <div class="card">
        <div class="card-block">
          <% if user_signed_in? %>
            <%= link_to 'New Post', new_post_path %>
          <% end %>
            <% @posts.each do |post| %>
            <h4 class="card-title"><%= link_to post.user.username, user_path(post.user.username) %></h4>
            <p class="following-font"><%= post.content %></p>
            <% if post.user == current_user %>
              <%= link_to 'Edit', edit_post_path(post) %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
            <% end %>
    </div>
  </div>
</div>
