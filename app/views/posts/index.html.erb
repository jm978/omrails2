<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-block">
          <% if user_signed_in? %>
            <h4 class="card-title">Your Account</h4>
            <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
            <p class="card-text"><%= link_to current_user.username, user_path(current_user.username)%></p>
            <% else %>
              <p class="card-text"><%= link_to "Sign up now!", signup_path %></p>
            <% end %>
          <a href="#" class="card-link">Card link</a>
          <a href="#" class="card-link">Another link</a>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card">
        <div class="card-block">
          <% if user_signed_in? %>
            <%= link_to 'New Post', new_post_path %>
          <% end %>
            <% @posts.each do |post| %>
            <h4 class="card-title"><%= link_to post.user.username, user_path(post.user.username) %></h4>
            <p class="card-text"><%= post.content %></p>
            <p class="card-text"><%= post.votes_for.up.size %>
            <p class="card-text"><%= link_to 'Vote', vote_post_path(post), method: :post %>
            </p>
            <p class="card-text"><%= link_to' Unvote', unvote_post_path(post), method: :delete %>
            </p>
            <% if post.user == current_user %>
              <%= link_to 'Edit', edit_post_path(post) %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
