<div class="container">
  <div class="row">
    <div class="col">
      <div class="card">
        <center><%= image_tag("welcome.png", :alt => "rss feed", class: "img-fluid") %></center>
          <div class="card-block">
            
              <% @posts.each do |post| %>
              <h4 class="card-title"><%= link_to post.user.username, user_path(post.user.username) %></h4>
              <p class="post-font"><%= post.content %></p>
              <% if post.image.present? %>
                <center><%= image_tag post.image, class: "img-fluid" %><center>
              <% end %>
              <!-- comment -->


              <!-- Likes -->
                <%= image_tag("heart.png") %>
                <%= link_to 'Epic', vote_post_path(post), method: :post %>
                <%= post.votes_for.up.size %>
                &nbsp;
                <%= image_tag("toilet.png") %>
                <%= link_to 'Flush', unvote_post_path(post), method: :delete %>
                
                <%= post.votes_for.down.size %>
             <br>
             <br>
              <% if post.user == current_user %>
                <%= link_to 'Edit', edit_post_path(post) %>
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
              <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
